{
  "compilerOptions": {
    "rootDir": "src",
    "target": "es2016",
    "module": "commonjs",
    "lib": ["es2016"],
    "sourceMap": true,
    "outDir": "./lib",
    "moduleResolution": "node",
    "declaration": true,

    "composite": false,
    "removeComments": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"]
    },
    "types": ["mocha", "node"]
  },
  "exclude": ["node_modules", "lib", "**/*.test.ts"],
  "include": ["./src/**/*.ts"]
}
